    <!-- To-From Part End -->
    <!--  Banks Names Start Here -->

    <div class="banksPdf" >
        <table class="tg">
          <tr>
            <th class="tg-hgcj">Bank</th>
            <th class="tg-hgcj">Location</th>
          </tr>
          <tr>
            <td class="tg-e3zv">Allahabad Bank : Ludhiana Zone</td>
            <td class="tg-031e"><%= @quotation_detail.bankZoneOne.html_safe %></td>
          </tr>
          <tr>
            <td class="tg-e3zv">Allahabad Bank : Amritsar Zone</td>
            <td class="tg-031e"><%= @quotation_detail.bankZoneTwo.html_safe %></td>
          </tr>
