    </div>    
    <!--  Banks Names Start End -->    
    <!-- List of Gen Rates Start-->
    <div class="quotationsPdf" >
        <h4 class="quotationLinePdf"><%= @quotation_detail.quotationLine.html_safe  %></h4><br />
        <div class="genRentAndTypePdf">
        <table class="tg">
            <thead>
                <tr> 
                    <th class="tg-hgcj">Generator Type</th> 
                    <th class="tg-hgcj">Generator Rent</th> 
                <tr>
            </thead>
            <tbody>
            <%  counter = 0
                qtnGenType = ''
                qtnGenRent = ''
                @quotation_rent.each do |qtn_rent|
                    qtnGenType = qtn_rent.genType.split(',')
                    qtnGenRent = qtn_rent.genRent.split(',')
                end
                qRent = qtnGenType.zip(qtnGenRent)
            %>
            <% qRent.each do |qt, qr| %>        
                <tr>
                    <% counter +=1 %>
                    <td class ="type" data-mercury="full" id ="quotation_type<%= counter %>"> <%= qt %>  </td>
                    <td class ="rent" data-mercury="full" id ="quotation_rent<%= counter %>"> <%= qr %> </td>
                </tr>
            <% end %>
            </tbody>
        </table>
        </div><br />
        <div class="counter" data-mercury="full" id="quotation_counter" style="display:none">
            <%= counter %>
        </div>    
        <h4 class="serviceTaxPdf">(Plus Service tax is applicable)</h4><br />
    </div>    
    <!-- List of Gen Rates End -->
    <!-- Sender Details Start -->
    <div class="secondPageContentPdf">    
        <p class="contentPartOnePdf"><%= @quotation_detail.contentPartOne.html_safe %></p><br><br>
        <p class="contetnPartTwoPdf"><%= @quotation_detail.contentPartTwo.html_safe %></p><br><br>
        <p class="thankYouPdf"><%= @quotation_detail.thankYou.html_safe %></p><br><br>
        <p class="yoursTrulyPdf"><%= @quotation_detail.yoursTruly.html_safe  %></p><br><br>
        <p class="nameOfCompanyPdf"><%= @quotation_detail.nameOfCompany.html_safe  %></p><br>
        <p><%= wicked_pdf_image_tag(@sender_detail.signature.url(:med))%></p><br>
        <p class="namePdf"><%= @sender_detail.name.html_safe  %></p>
        <p class="authSign">(Authorized Signatory)</p><br>
    </div>       
    <!-- Sender Details End -->
    <!-- Template End -->
</section>
