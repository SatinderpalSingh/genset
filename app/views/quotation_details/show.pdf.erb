    <!-- Template Start -->
    <!-- To-From Part Start -->
    <div class="contentPartPdf">
        <div class="referenceNumberPdf">Reference Number : <%= @quotation_detail.referenceNumber %></div>
        <div class="datedPdf">Dated : <%= Time.now.strftime("%m/%d/%Y") %></div><br /><br />    
