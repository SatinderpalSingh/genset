<section class="quotationSection">
<%= render "welcome/header" %>
<div class="quotationForm">
<h2 class="fillForm">Available Generators</h2><br>

<%= form_for(@gen_avail) do |f| %>
  <% if @gen_avail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@gen_avail.errors.count, "error") %> prohibited this gen_avail from being saved:</h2>
      <ul>
      <% @gen_avail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <label class="ll">Generator type</label>
  <%= f.collection_select :gen_detail_id, GenDetail.all, :id, :genType, prompt: true, :class => 'common', :required => true %>

  <label class="ll">Generator consumption</label>
  <%= f.text_field :genConsumption, :class => 'common', :required => true, :title => 'Positive value between 1 & 999', :pattern => "^(?!0)[0-9]{1,3}$"  %>

  <label class="ll">Service Due Hours </label>
  <%= f.text_field :service_due_after, :class => 'common', :required => true, :title => 'Positive value between 1 & 9999', :pattern => "^(?!0)[0-9]{1,4}$"  %>

  <p style="text-align:center;"> Available: 
  <%= f.check_box :available, :required => true %>
  </p><br />

  <p style="text-align:center;">  
  <%= submit_tag "Submit", :id => "submit", :name => "submit", :class => "send save", :disabled => false, :disable_with => "Please wait..." %></p>

<% end %>
</div>
</section>
