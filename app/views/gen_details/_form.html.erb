<%= form_for(@gen_detail) do |f| %>
  <% if @gen_detail.errors.any? %>
    <div id="error_explanation">
		<ul>
      <% @gen_detail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<section class="quotationSection">
    <div class="quotationForm">
    <h2 class="fillForm"> Edit Generator Type Details</h2>

 <label class="ll">Generator Type</label>  <%= f.text_field :genType, autofocus: true, :required => true, :class => 'nameOfBank', :placeholder => 'Type',:title => 'What is the type of generator?' %><br>
 <label class="ll">Rent per Generator</label>  <%= f.text_field :genRent, autofocus: true, :required => true, :class => 'address', :placeholder => 'Rent', :title => 'Positive value between 1 & 999999', :pattern => "^(?!0)[0-9]{1,6}$" %><br>
  <% if @gen_detail.total_gen.blank? %>
  <%= fields_for :gen_avails do |a| %>
	  <label class="ll">Consumption (in litre)</label> <%= a.text_field :genConsumption, autofocus: true, :required => true, :class => 'address', :placeholder => 'Consumption', :title => 'Positive value between 1 & 999', :pattern => "^(?!0)[0-9]{1,3}$" %><br>
	  <label class="ll">Service Due hours</label> <%= a.text_field :service_due_after, autofocus: true, :required => true, :class => 'address', :placeholder => 'Service Due Hours', :title => 'Positive value between 1 & 9999', :pattern => "^(?!0)[0-9]{1,4}$" %><br>
  <% end %>
  <label class="ll">Total Available Generators </label>    <%= f.text_field :total_gen, autofocus: true, :required => true, :class => 'contactNumber', :placeholder => 'No. of Available Generators', :title => 'Positive value between 1 & 999 ', :pattern => "^(?!0)[0-9]{1,3}$" %>
   <% else %>
	<% %>
	<% end %>
 <br><br>
          <p style="text-align: center;"><%= f.submit :class => 'quotation_submit', :value => 'Submit', :disabled => false, :disable_with => "Please wait..." %></p><br>
    </div> 
</section>
<% end %>
